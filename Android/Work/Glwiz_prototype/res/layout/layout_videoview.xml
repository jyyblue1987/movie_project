<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"    
    >
    <tv.danmaku.ijk.media.widget.VideoView
        android:id="@+id/video_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center" />
    
    
    <TextView
	    android:id="@+id/txt_state"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"	  
	    android:layout_marginLeft="15dip"        
        android:layout_marginTop="15dip"
	    android:text="4x"
	    android:textColor="@color/white"
	    android:visibility="gone" 
	    />
    	
    <LinearLayout
        android:id="@+id/lay_channel_info"
        android:layout_width="match_parent"
        android:layout_height="50dip" 
        android:layout_margin="5dip"
        android:background="#BB000000"
        >
        <TextView
            android:id="@+id/txt_channel_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip" 
            android:text="CH 021"
            android:textColor="@color/white"
            />
        <LinearLayout
            android:id="@+id/lay_divider"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_margin="10dip"            
            android:orientation="vertical" 
            android:background="@color/white"
            >            
        </LinearLayout>
        <TextView
            android:id="@+id/txt_channel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_marginTop="10dip" 
            android:text="Sports"
            android:textColor="@color/white"
            />
        <GridView 
		    android:id="@+id/category_list"
		    android:layout_width="150dip"
		    android:layout_height="wrap_content"
		    android:numColumns="3"			
		    android:horizontalSpacing="2dip"
			android:verticalSpacing="2dip"
		    >
		</GridView>   
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/lay_channel_list"
        android:layout_width="160dip"
        android:layout_height="match_parent" 
        android:layout_marginLeft="5dip"
        android:layout_marginTop="55dip"
        android:layout_marginBottom="5dip"
        android:orientation="vertical"
        android:background="#BB000000"        
        >
        <LinearLayout
            android:id="@+id/lay_channel_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#BB000000"  
            >
            <ImageView
                android:id="@+id/img_leftarrow"
                android:layout_width="15dip"
                android:layout_height="20dip" 
                android:background="@drawable/left_icon"
                />
            <TextView
                android:id="@+id/txt_channel_count"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="All(209)"
                android:textColor="@color/white" 
                />
            <ImageView
                android:id="@+id/img_rightarrow"
                android:layout_width="15dip"
                android:layout_height="20dip" 
                android:background="@drawable/right_icon"
                />
        </LinearLayout>
        <ListView
            android:id="@+id/list_channel"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:cacheColorHint="#00000000"
	        android:scrollbars="none"
            >
            
        </ListView>
    </LinearLayout>
    
    
    <LinearLayout
        android:id="@+id/buffering_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="gone"
        android:orientation="vertical"        
        >
        <ProgressBar
            android:id="@+id/buffering_progress"
            style="@android:style/Widget.ProgressBar.Large"
            android:layout_width="60dip"
            android:layout_height="60dip" />
        <TextView
            android:id="@+id/buffering_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="0"
            android:scaleType="centerInside"
            android:singleLine="true"
            android:text="Loading"
            android:textSize="12sp" />
    </LinearLayout>
    
    <TextView
        android:id="@+id/txt_channel_gotonum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dip" 
        android:text="12"
        android:textColor="@color/green"        
        />
</FrameLayout>
